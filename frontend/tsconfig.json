{
    "compilerOptions": {
      "sourceMap": true,
      "module": "commonjs",
      "target": "es5",
      "strict": true,
      "moduleResolution": "node",
      "noImplicitThis": false,
      "baseUrl": ".",
      "paths": {
          "@config": ["config/GeneralConfig"]
      }
    },

    "include": [
        "src/**/*",
        "config/**/*",
        "build/**/*"
    ],

    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}